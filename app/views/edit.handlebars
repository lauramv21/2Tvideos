<h2 class="page-header">Editar publicación</h2>
<form method="post" action="/editar/{{video.id}}">
    <div class="form-group">
        <label>Título</label>
        <input type="text" class="form-control" name="titulo" value="{{video.title}}">
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <input type="text" class="form-control" name="description" value="{{video.description}}"/>
    </div>
    <div class="form-group">
        <label>Precio</label>
        <input type="text" class="form-control" name="price" value="{{video.price}}"/>
    </div>
    <div class="form-group">
      {{#ifCond video.privateFile "true"}}
          <label><input type="checkbox" class="" name="privateFile" checked> Privado</label>
      {{else}}
          <label><input type="checkbox" class="" name="privateFile" > Privado</label>
      {{/ifCond}}
    </div>
    <button type="submit" class="btn btn-info">Actualizar</button>
</form>
<h2 class="page-header">Eliminar imagen</h2>
<form method="post" action="/delete/{{video.id}}">
    <button type="submit" class="btn btn-danger">Eliminar publicacion</button>
</form>

<hr>
<a class="btn btn-warning" href="/misvideos" role="button">Cancelar</a>
