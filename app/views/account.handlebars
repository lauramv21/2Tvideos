<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="header">Hola, {{usuario.username}}
            </h1>
        </div>
    </div>

</div>

<form method="post" action="/actualizarDatos">
    <div class="form-group">
        <label>Nombre</label>
        <input type="text" class="form-control" name="name" value="{{usuario.name}}">
    </div>
    <div class="form-group">
        <label>Apellido</label>
        <input type="text" class="form-control" name="lastname" value="{{usuario.lastname}}">
    </div>
    <button type="submit" class="btn btn-info">Actualizar</button>

</form>

<hr>

<form method="post" action="/cambiarClave">
    <div class="form-group">
        <h2>Cambio de contraseña</h2>
        <label>Contraseña anterior</label>
        <input type="password" class="form-control" name="oldpassword" placeholder="contraseña anterior">
    </div>
    <div class="form-group">
        <label>Nueva contraseña</label>
        <input type="password" class="form-control" name="newpassword" placeholder="nueva contraseña">
    </div>
    <div class="form-group">
        <label>Repetir nueva contraseña</label>
        <input type="password" class="form-control" name="confirmPassword" placeholder="repetir nueva contraseña">
    </div>
    <button type="submit" class="btn btn-info">Guardar</button>

</form>

<hr>

<form method="post" action="/eliminarCuenta">
    <h2>Eliminar cuenta</h2>
    <button type="submit" class="btn btn-danger">Eliminar cuenta</button>
</form>

<hr>
<a class="btn btn-warning" href="/videos" role="button">Cancelar</a>
